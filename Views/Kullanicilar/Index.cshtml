@model IEnumerable<TercumanTakipWeb.Models.Users>

@{
    ViewData["Title"] = "Index";
    ViewData["ContName"] = "Ayarlar";
}

<h1>Kullanıcılar</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Kullanıcı Ekle</a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AdSoyad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KullaniciAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KullaniciTipi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Seviye)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AdSoyad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KullaniciAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KullaniciTipi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Seviye)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-warning">Düzenle</a>
                    <a href="#" class="btn btn-danger" onclick="confirmDelete('@item.id')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDelete(itemId) {
            Swal.fire({
                title: 'Are you sure?',
                text: "This action cannot be undone!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'No, cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/Users/Delete/' + itemId,
                        type: 'POST',
                        success: function (response) {
                            Swal.fire('Deleted!', 'The record has been deleted.', 'success').then(() => {
                                location.reload(); // Refresh the page to reflect the deletion
                            });
                        },
                        error: function (xhr, status, error) {
                            Swal.fire('Error!', 'Failed to delete the record.', 'error');
                        }
                    });
                }
            });
        }
    </script>
}
