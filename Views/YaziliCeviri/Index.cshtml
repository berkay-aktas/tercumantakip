@model YaziliCeviriVM

@{
    ViewData["Title"] = "Yazılı Çeviri";
    ViewData["ContName"] = "YaziliCeviri";
}

<h2>Yapılan Yazılı Çeviriler</h2>

<p>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#CreateModal">
        Yeni Çeviri
    </button>
</p>

<head>
    <style>
        #YaziliCeviriGrid th,
        #YaziliCeviriGrid td {
            text-align: center;
        }
    </style>
</head>

<table class="table" id="YaziliCeviriGrid">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.isTakipListesi_YaziliCeviri.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isTakipListesi_YaziliCeviri.KullaniciAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isTakipListesi_YaziliCeviri.KayitTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isTakipListesi_YaziliCeviri.Dil)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isTakipListesi_YaziliCeviri.CeviriKonusu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isTakipListesi_YaziliCeviri.CeviriTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isTakipListesi_YaziliCeviri.KelimeSayisi)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.isTakipListesi_YaziliCeviriList)
        {
            <tr>
                <td>  <a asp-action="Details" asp-route-id="@item.id" class="btn btn-success">Detay</a> </td>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KullaniciAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KayitTarihi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dil)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CeviriKonusu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CeviriTarihi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KelimeSayisi)
                </td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="Create">
    <!-- Modal -->
    <div class="modal fade" id="CreateModal" tabindex="-1" aria-labelledby="CreateModal" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="CreateModal">Yeni Çeviri Ekle</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="mb-3">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="col-12 grid-margin">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label asp-for="isTakipListesi_YaziliCeviri.Dil" class="control-label"></label>
                                            <div class="list-group checkbox-group required">
                                                @for (int i = 0; i < Model.DilListesi.Count; i++)
                                                {
                                                    <label class="list-group-item">
                                                        <input asp-for="@Model.DilCheckbox[i].isChecked" class="form-check-input me-1" type="checkbox">
                                                        @Model.DilListesi[i]
                                                    </label>
                                                    <input type="hidden" value="@Model.DilListesi[i]" asp-for="@Model.DilCheckbox[i].Dil" />
                                                }
                                            </div>
                                            <span asp-validation-for="isTakipListesi_YaziliCeviri.Dil" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label asp-for="isTakipListesi_YaziliCeviri.CeviriKonusu" class="control-label"></label>
                                            <textarea asp-for="isTakipListesi_YaziliCeviri.CeviriKonusu" class="form-control"> </textarea>
                                            <span asp-validation-for="isTakipListesi_YaziliCeviri.CeviriKonusu" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">

                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label asp-for="isTakipListesi_YaziliCeviri.CeviriTarihi" class="control-label"></label>
                                        <input asp-for="isTakipListesi_YaziliCeviri.CeviriTarihi" class="form-control" type="date" />
                                        <span asp-validation-for="isTakipListesi_YaziliCeviri.CeviriTarihi" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label asp-for="isTakipListesi_YaziliCeviri.KelimeSayisi" class="control-label"></label>
                                        <input asp-for="isTakipListesi_YaziliCeviri.KelimeSayisi" class="form-control" type="number" />
                                        <span asp-validation-for="isTakipListesi_YaziliCeviri.KelimeSayisi" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="isTakipListesi_YaziliCeviri.EkBilgi" class="control-label"></label>
                                <textarea asp-for="isTakipListesi_YaziliCeviri.EkBilgi" class="form-control"> </textarea>
                                <span asp-validation-for="isTakipListesi_YaziliCeviri.EkBilgi" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                    <button type="submit" value="Save" class="btn btn-primary">Kaydet</button>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <script>
        $('#YaziliCeviriGrid').DataTable()
    </script>

}